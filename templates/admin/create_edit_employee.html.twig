{% extends 'base.html.twig' %}

{% block title %}Create employee{% endblock %}

{% block body %}

    {% include 'default/navbar.html.twig' %}

    <div class="container mt-2">
        {% if editing is defined %}
            <h1>Edit employee</h1>
        {% else %}
            <h1>Create employee</h1>
        {% endif %}

        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.incorporationDate) }}
        {{ form_row(form.workContract) }}
        {{ form_row(form.projects) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i>
            {% if editing is defined %}
            {{ 'label.edit_employee'|trans }}
            {% else %}
            {{ 'label.create_employee'|trans }}
            {% endif %}
        </button>

        {{ form_end(form) }}
    </div>


{% endblock %}
